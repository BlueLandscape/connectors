{
  "openapi": "3.1.0",
  "info": {
    "title": "Sumup",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "https://api.sumup.com/v0.1"
    }
  ],
  "paths": {
    "/checkouts": {
      "get": {
        "description": "List checkouts"
      },
      "post": {
        "description": "Create checkouts"
      }
    },
    "/checkouts/{id}": {
      "get": {
        "description": "Retrieve a checkout"
      },
      "put": {
        "description": "Process a checkout"
      },
      "delete": {
        "description": "Deactivate a checkout"
      },
      "parameters": [
        {
          "name": "id",
          "in": "path",
          "description": "ID",
          "required": true,
          "schema": {
            "type": "string"
          },
          "style": "simple"
        }
      ]
    },
    "/merchants/{merchant_code}/payment-methods": {
      "get": {
        "description": "Get available payment methods"
      },
      "parameters": [
        {
          "name": "merchant_code",
          "in": "path",
          "description": "merchant_code",
          "required": true,
          "schema": {
            "type": "string"
          },
          "style": "simple"
        }
      ]
    }


  }
}
